	PROW_PROJECT=$(PROW_PROJECT) \
	./scripts/set-up-workload-identity-configs.sh

.PHONY: push-test-helm-charts-to-ar
push-test-helm-charts-to-ar: "$(HELM)"
	GCP_PROJECT=$(GCP_PROJECT) ./scripts/push-test-helm-charts-to-ar.sh